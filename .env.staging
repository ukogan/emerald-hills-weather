# Emerald Hills Weather Dashboard - Staging Environment Configuration
# This file contains staging-specific environment variables

# OpenWeatherMap API Key (Required)
# Use test or development API key for staging
OPENWEATHER_API_KEY=your_staging_openweather_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=staging

# Database Configuration
DB_PATH=./data/weather-staging.db

# API Rate Limiting (More lenient for testing)
MAX_REQUESTS_PER_MINUTE=120
CACHE_DURATION_MINUTES=5

# Target Location (Emerald Hills)
TARGET_LAT=37.4419
TARGET_LON=-122.2708
TARGET_ELEVATION=440

# Logging Level (More verbose for staging)
LOG_LEVEL=debug

# Staging-specific settings
STAGING_MODE=true
ENABLE_DEBUG_ENDPOINTS=true